
{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "include": [
        "./src/**/*"
    ],
    "modules": [
        "./src",
        "node_modules"
    ]
}